  "dependencies": {
    "konva": "^9.3.11"
  },
  "devDependencies": {
    "canvas": "^2.11.2",
    "copyfiles": "^2.4.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
